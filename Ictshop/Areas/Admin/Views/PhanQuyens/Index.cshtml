@model IEnumerable<Ictshop.Models.PhanQuyen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .btn-edit {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
    }

    .btn-details {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
    }
</style>
<h2>Quyền truy cập</h2>

<p>
    <button class="btn btn-primary" style="background-color:black"> @Html.ActionLink("Thêm mới quyền", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Tên Quyền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IDQuyen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenQuyen)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.IDQuyen }, new { @class = "btn-edit" })
        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDQuyen }, new { @class = "btn-details" }) 
        @Html.ActionLink("Xoá", "Delete", new { id = item.IDQuyen }, new { @class = "btn-delete" })
    </td>
</tr>
}

</table>
