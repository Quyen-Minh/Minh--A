@{
    ViewBag.Title = "SHOP điện tử";
}
<style>
    .menu {
        list-style-type: none;
        margin: 0;
        padding: 0;
        text-align: center;
        background-color:aquamarine;
    }

    .menu li {
        display: inline-block;
        padding: 10px 60px;
    }

    .menu li a {
        display: block;
        padding-top: 7px;
        text-decoration: none;
        font-size: 23px;
        color: black;
        font-family: 'Quicksand', sans-serif;
    }

    .menu li a:hover {
        color: red;
    }

    .column{
        float: left;
        width: 70%;
        padding-top:10px;
    }

    .image {
        float: right;
        width: 30%;
        padding-top: 10px;
    }
</style>
<br />
<br />

<div>
    <ul class="menu">
        <li class="dienthoai fa-light"><a>MỚI NHẤT</a></li>
        <li class="laptop"><a>KHUYẾN MÃI</a></li>
        <li class="tivi"><a>CÔNG NGHỆ</a></li>
        <li class="tulanh"><a>ĐÁNH GIÁ SẢN PHẨM</a></li>
    </ul>
</div>
<div class="column">
    <img src="~/HinhanhSP/ttmoi1.PNG" />
    <div class="pkdt">
        @Html.Action("Tinmoinhat", "Thongtin")
    </div>
    <div class="pklt">
        @Html.Action("Tinmoikhuyenmai", "Thongtin")
    </div>
    <div class="pktv">
        @Html.Action("Tinmoicongnghe", "Thongtin")
    </div>
    <div class="pktl">
        @Html.Action("Tinmoidanhgiasanpham", "Thongtin")
    </div>
</div>
<div class="image">
    <img src="~/HinhanhSP/ttmoi2.PNG" />
    <img src="~/HinhanhSP/ttmoi3.PNG" />
    <img src="~/HinhanhSP/ttmoi5.PNG" />
</div>
<div style="clear:both;"></div>
<br />
<div>
    <img class="img-responsive" src="~/HinhanhSP/ban1.jpg" />
</div>
<br />
<div class="spnoibat">
    <div class="row">

        <h3> TIN TỨC HOT</h3>
        <div class="col-md-6">
            <img src="~/HinhanhSP/laplap.PNG" class="img-responsive" alt="" />
        </div>
        <div class="col-md-6">
            <img src="~/HinhanhSP/laplap1.PNG" class="img-responsive" alt="" />
        </div>
    </div>
</div>

<div class="row">
    <h2> THÔNG BÁO MỚI</h2>
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
    </div>
</div>
@section script{
        <script>
            var pkdienthoai = document.querySelector('.pkdt');
            var pklaptop = document.querySelector('.pklt');
            var pktivi = document.querySelector('.pktv');
            var pktulanh = document.querySelector('.pktl');

            // lấy phần tử li chứa danh mục điện thoại
            var dienthoai = document.querySelector('.dienthoai');
            dienthoai.addEventListener('click', function () {
                // ẩn các phần tử khác
                pklaptop.style.display = 'none';
                pktivi.style.display = 'none';
                pktulanh.style.display = 'none';

                // hiển thị phần tử chứa phụ kiện điện thoại
                pkdienthoai.style.display = 'block';
            });

            var laptop = document.querySelector('.laptop');
            laptop.addEventListener('click', function () {
                // ẩn các phần tử khác
                pkdienthoai.style.display = 'none';
                pktivi.style.display = 'none';
                pktulanh.style.display = 'none';

                // hiển thị phần tử chứa phụ kiện laptop
                pklaptop.style.display = 'block';
            });

            var tivi = document.querySelector('.tivi');
            tivi.addEventListener('click', function () {
                // ẩn các phần tử khác
                pkdienthoai.style.display = 'none';
                pklaptop.style.display = 'none';
                pktulanh.style.display = 'none';
                // hiển thị phần tử chứa phụ kiện tivi
                pktivi.style.display = 'block';
            });

            var tulanh = document.querySelector('.tulanh');
            tulanh.addEventListener('click', function () {
                // ẩn các phần tử khác
                pkdienthoai.style.display = 'none';
                pklaptop.style.display = 'none';
                pktivi.style.display = 'none';
                // hiển thị phần tử chứa phụ kiện tủ lạnh
                pktulanh.style.display = 'block';
            });

        </script>
    }