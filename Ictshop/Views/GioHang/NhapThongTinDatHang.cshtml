@using Ictshop.Models;
@model Donhang

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2>Nhập thông tin đặt hàng</h2>

@using (Html.BeginForm("DatHang", "GioHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h4>Họ tên</h4>
        @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control"})
        <span id="hoTenErrorMessage"></span>
    </div>


    <div class="form-group">
       <h4>Địa chỉ</h4>
        @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <h4>Số điện thoại</h4>
        @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <h4>Email</h4>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>
    <!-- Các trường thông tin khác tùy theo yêu cầu -->

    <input type="submit" value="Đặt hàng" class="btn btn-primary" />
}
