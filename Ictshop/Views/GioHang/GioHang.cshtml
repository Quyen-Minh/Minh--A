@using Ictshop.Models;
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .divGioHang {
        border: 2px solid #EEEEEE;
        font-size: large;
        width:100%       
    }
    .divGioHang td,th{
        padding: 10px;
        border: 2px solid #EEEEEE;
        text-align: center
    }

    .tt {
        font-size: 20px;
        color: antiquewhite;
        font-family: large;
        
    }
    .tt input:hover {
        color: antiquewhite;
    }
    .tt input {
        border-radius: 5px;
        background-color: orangered;
    }
    .thanhtoan input {
        border-radius: 5px;
        background-color:orangered;
        padding:5px 20px 5px 20px;
    }
    .thanhtoan input:hover {
        background-color: orangered;
    }
</style>

<br />
<br />
<h2 class=""> GIỎ HÀNG <i class="fa fa-shopping-cart"></i></h2>
<br />
<table class="@*table-hover table-bordered*@ divGioHang">
    <tr class="">
        @*<th> Mã SP</th>*@

        <th> Ảnh bìa</th>

        <th> Tên SP</th>

        <th> Đơn giá</th>

        <th> Số lượng</th>

        <th> Thành tiền</th>
    </tr>



    @foreach (var item in Model)
    {
        <tr class="font-italic">
            @*<td> @item.iMasp</td>*@
            <td> <img src="@Url.Content("~/HinhanhSP/" +item.sAnhBia)" width="200" height="200" /></td>

            <td> @item.sTensp</td>

            <td>  @String.Format("{0:0,0}", item.dDonGia) VNĐ</td>

            <td> @item.iSoLuong</td>

            <td>   @String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>


        </tr>

    }



    <tr>
        @*<td>
            @Html.ActionLink("Tiếp tục mua hàng", "Index", "Home")
        </td>*@
        <td colspan="4" style="text-align:right">

            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")
        </td>
        <td colspan="4" class="thanhtoan">
            @using (Html.BeginForm("NhapThongTinDatHang", "GioHang", new { @class = "" }))
            {
                <input type="submit" value="Thanh toán" class="btn-danger" />
            }
        </td>
    </tr>
</table>
<a href="~/Home/Index" class="tt"><input type="submit" value="< Tiếp tục mua sắm"/></a>

